#include "pch.h"
#include <iostream>
#include <string>
#include <windows.h>
using namespace std;
int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);//корректный вывод русского языка
	string name;
	cout << " Введите свое имя"<< endl;
	cin >> name;//считывание имени
	cout << "Привет, " << name << endl;//вывод приветствия
	system("pause");
	return 0;
}
