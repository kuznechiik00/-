#include "pch.h"
#include <iostream>
#include <string>
using namespace std;
class Group
{
public:
	int nomer;
	string Name;
	string familiy;
	int kolvo;


};
int main()
{
	int n;
	int k;
	k = 1;
	setlocale(LC_ALL, "Russian");
	Group student[400];
	cout << "введите количество студентов" << endl;
	cin >> n;
	for (int i = 0; i < n; i++)
	{
		cout << "введите имя" << endl;
		cin >> student[i].Name;
		cout << "введите фамилию" << endl;
		cin >> student[i].familiy;
		cout << "введите количество прогулов" << endl;
		cin >> student[i].kolvo;
	}

	for (int i = 0; i < n; i++)
	{

		cout << i + 1 << ")" << student[i].Name << " " << student[i].familiy << " " << student[i].kolvon << endl;

	}



	return 0;

}
